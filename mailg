Prgnam='mailg'
Version='0.0.42'
Verbose=0
Debug=0
Config_File_Name="${Prgnam}rc"
Config_Defaults="
$PWD/$Config_File_Name
$PWD/.$Config_File_Name
$HOME/.$Config_File_Name
${XDG_CONFIG_HOME:-$HOME/.config}/$Config_File_Name
/usr/local/etc/$Config_File_Name
/etc/$Config_File_Name
"
# Envioronment variables
MAILGUN_API_KEY="${MAILGUN_API_KEY:-}" 
MAILGUN_API_DOMAIN="${MAILGUN_API_DOMAIN:-}"
MAILGUN_API_URL="${MAILGUN_API_URL:-https://api.mailgun.net/v3}"
MAILGUN_FROM_ADDRESS="${MAILGUN_FROM_ADDRESS:-}"  # Optional
MAILGUN_FROM_NAME="${MAILGUN_FROM_NAME:-$NAME}"   # Optional

# Usage and Help
usage() {
  cat << EOF
$(clr bld)Usage: $Prgnam [-dv] [-b $(clr rst ita)bcc$(clr rst bld)] [-c $(clr rst ita)cc$(clr rst bld)] [-r $(clr rst ita)address$(clr rst bld)] [-s $(clr rst ita)subject$(clr rst bld)] $(clr rst ita)recipient$(clr rst)
EOF
}

help() {
  cat << EOF
$Prgnam -- $Version
Send mail via mailgun and curl from the command-line.

$(usage)

    -v    Verbose mode.
    -d    Debug mode.
    
    -C    Configuration file.
    -s    Subject.
    -r    From email.
    -F    From name.

ENVIRONMENT VARIABLES

    MAILGUN_API_KEY
    MAILGUN_API_DOMAIN
    MAILGUN_API_URL (default: https://api.mailgun.net/v3)
    MAILGUN_FROM_ADDRESS
    MAILGUN_FROM_NAME
EOF
}

# STDIN/STDOUT Functions
out() {
  printf %s\\n "$*"
}

err() {
  >&2 printf %s\\n "$*"
}

die() {
  err "$*"
  exit 1
}

info() {
  if [ "$Verbose" -ge 1 ]; then
    err "$*"
  fi
}

debug() {
  if [ "$Debug" -ge 1 ]; then
    err "DEBUG: $*"
  fi
}

clr() {
  # Receives: color / format
  # Returns: Prints ANSI cooe
  _pfx='\033['     # prefix
  _rst='m'         # reset
  _bld='1m'        # bold
  _ita='3m'        # italics
  _red=';31m'      # red
  _grn=';32m'      # green
  _ylw=';33m'      # yellow
  _wht=';37m'      # white

  # Return nothing if not an interactive terminal
  if [ ! -t 0 ]; then
    return
  fi

  while [ "$#" -gt 0 ]; do
    case "$1" in
      bld) printf %b "${_pfx}${_bld}" ; shift ;;
      ita) printf %b "${_pfx}${_ita}" ; shift ;;
      red) printf %b "${_pfx}${_red}" ; shift ;;
      grn) printf %b "${_pfx}${_grn}" ; shift ;;
      ylw) printf %b "${_pfx}${_ylw}" ; shift ;;
      wht) printf %b "${_pfx}${_wht}" ; shift ;;
      rst) printf %b "${_pfx}${_rst}" ; shift ;;
        *) info "Unknown color: $1"   ; shift ;;
    esac
  done
}

append_array() {
  if [ -n "$2" ]; then
    out "$2"
  fi
  out "$1"
}

main() {
  subj=""
  from_addr=""
  from_name=""
  message=""
  attach=""
  from=""

  # Check for configuration file
  for _conf in $Config_Defaults; do
    if [ -r "$_conf" ]; then
      . "$_conf" || exit 1
    fi
  done

  while getopts ':hvdC:a:F:r:s:' OPTION; do
    case "$OPTION" in
      d) Debug=1 ;;
      h) help ; return ;;
      v) Verbose=1 ;;
      a) attach="$(append_array "$OPTARG" "$attach")" ;;
      C) . "$OPTARG" || exit 1 ;;
      F) from_name="$OPTARG" ;;
      r) from_addr="$OPTARG" ;;
      s) subj="$OPTARG" ;;
      *) usage ; exit 1 ;;
    esac
  done
  shift "$((OPTIND -1))"
  
  # Get message from stdin
  if [ -p /dev/stdin ] || [ -f /dev/stdin ]; then
    message="$(cat)"
  fi
  
  # Build "From" address
  if [ -z "${from_addr:=$MAILGUN_FROM_ADDRESS}" ]; then
    from_addr="${USER:-nobody}@$MAILGUN_API_DOMAIN"
  fi

  if [ -n "${from_name:=$MAILGUN_FROM_NAME}" ]; then
    from="$from_name <$from_addr>"
  else
    from="$from_addr"
  fi

  debug "Verbose=$Verbose"
  debug "Debug=$Debug"
  debug "attach=$attach"
  debug "subj=$subj"
  debug "from_addr=$from_addr"
  debug "from_name=$from_name"
  debug "from=$from"
  debug "recipients=$*"
  debug "message=$message"

  # Check from Environment variables
  if [ -z "$MAILGUN_API_KEY" ]; then
    err "MAILGUN_API_KEY unset."
  fi
  if [ -z "$MAILGUN_API_DOMAIN" ]; then
    err "MAILGUN_API_DOMAIN unset."
  fi
  if [ -z "$MAILGUN_API_URL" ]; then
    err "MAILGUN_API_URL unset."
  fi
  
  # Check for To: address
  if [ -z "$1" ]; then
    err "No recipient address."
  fi
  
  # Build recipient array
  count=0
  for _to in "$@"; do
    [ "$count" -eq 0 ] && set --; count=$((count +1))
    set -- "$@" -F "text=$_to"
  done

  # Append attachments to array
  if [ -n "$attach" ]; then
    for _file in $attach; do
      set -- "$@" -F "attachment=@$_file"
    done
  fi
  
  # Post message
  _res=$(mktemp 2>&1) || die "$_res"    # temp file to cleanup later
  if ! _ret=$(curl -sS \
    -w "%{http_code}\n" \
    -o "$_res" \
    --user "api:$MAILGUN_API_KEY" \
    "$MAILGUN_API_URL/$MAILGUN_API_DOMAIN/messages" \
    -F "subject=$subj" \
    -F "text=$message" \
    -F "from=$from" \
    "$@" 2>&1); then
    err "curl error: $_res"
    return 1
  fi

  info "$(cat _res)"
  rm "$_res"                          # cleanup temp file

  if [ "$_ret" -ne 200 ]; then
    err "HTTP error code: $_ret"
    return 1
  fi
}

main "$@"
